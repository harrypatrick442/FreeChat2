<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>  
    <listener-class>
       MyWeb.Context
    </listener-class>
</listener>  
    <web-resource-collection>
        <web-resource-name>Protected resource</web-resource-name>
    </web-resource-collection>
    <context-param>
        <param-name>org.apache.tomcat.websocket.textBufferSize</param-name>
        <param-value>500000</param-value>
    </context-param>
    <context-param>
        <param-name>org.apache.tomcat.websocket.binaryBufferSize</param-name>
        <param-value>500000</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletIndex</servlet-name>
        <servlet-class>MyWeb.ServletIndex</servlet-class>
        <multipart-config>
            <max-file-size>1000000</max-file-size>
            <max-request-size>1000000</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletIndex</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletProfileImages</servlet-name>
        <servlet-class>MyWeb.ServletProfileImages</servlet-class>
        <multipart-config>
            <max-file-size>1000000</max-file-size>
            <max-request-size>1000000</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletProfileImages</servlet-name>
        <url-pattern>/profile_image/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletMySocket</servlet-name>
        <servlet-class>MySocket.ServletMySocket</servlet-class>
        <!-- 52MB max -->
        <multipart-config>
            <max-file-size>4194304</max-file-size>
            <max-request-size>4194304</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletMySocket</servlet-name>
        <url-pattern>/ServletMySocket</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
    <init-param>
        <param-name>cors.allowed.origins</param-name>
        <param-value>/*</param-value>
    </init-param>
</web-app>
